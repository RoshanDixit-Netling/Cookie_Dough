              <h1 class="display-1">{{ section.settings.heading }}</h1>
            </div>
            <div class="col-xl-5 col-md-6">
              {{ section.settings.content }}
            </div>
          </div>
          <footer>
            <a href="#" class="btn btn-primary btn-xl">{{ section.settings.button-label }}</a>
          </footer>
        </div>
      </div>
