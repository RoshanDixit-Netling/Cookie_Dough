{
  "name": "Home Banner Section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "label": "Banner Background Image",
      "id": "banner_background_image"
    },
    {
      "type": "url",
      "label": "Banner Background Video Url",
      "id": "banner_background_video_url"
    },
    {
      "type": "text",
      "label": "Banner Button Label",
      "id": "banner_button_label"
    },
    {
      "type": "url",
      "label": "Banner Button Link",
      "id": "banner_button_link"
    }
  ],
  "blocks": [
    {
      "type": "banner_slide_block",
      "name": "Banner Slide Block",
      "settings": [
        {
          "type": "image_picker",
          "label": "Slide Image",
          "id": "slide_image"
        },
        {
          "type": "textarea",
          "label": "Silder Text",
          "id": "silder_text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Banner Section"
    }
  ]
}
{%- endschema -%}

