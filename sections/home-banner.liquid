<!-- page head --->
<div id="page-head" class="page-head2 text-white text-center">
  <div class="container">
    <div class="owl-carousel carousel5">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'banner_slide_block' -%}
           <div class="item">
            <img class="mx-auto" src="{{ block.settings.slide_image | image_url }}" alt="text-image">
            <p>{{ block.settings.silder_text }}</p>
            <a href="{{ section.settings.banner_button_link }}" class="btn btn-primary btn-xl">{{ section.settings.banner_button_label }}</a>
          </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
  <figure class="figure1 cover-img">
    <img class="w-100" src="{{ section.settings.banner_background_image | image_url }}" alt="{{ section.settings.banner_background_image.alt }}" />
  </figure>
</div>
<!-- /page head --->

{%- schema -%}
{
  "name": "Home Banner Section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "label": "Banner Background Image",
      "id": "banner_background_image"
    },
    {
      "type": "text",
      "label": "Banner Button Label",
      "id": "banner_button_label"
    },
    {
      "type": "url",
      "label": "Banner Button Link",
      "id": "banner_button_link"
    }
  ],
  "blocks": [
    {
      "type": "banner_slide_block",
      "name": "Banner Slide Block",
      "settings": [
        {
          "type": "image_picker",
          "label": "Slide Image",
          "id": "slide_image"
        },
        {
          "type": "textarea",
          "label": "Silder Text",
          "id": "silder_text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Banner Section"
    }
  ]
}
{%- endschema -%}

