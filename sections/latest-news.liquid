  {%  assign posts_displayed = section.settings.blog.articles_count %}
    {% if section.settings.blog.articles_count > 0 %}
      <!-- section -->
        <div class="section news-overview related wave1">
          <div class="container">
            <header class="text-center c-mb-4">
              <h2 class="heading1">{{ section.settings.latest-news-title }}</h2>
            </header>
            <div class="row">
              {%- if section.settings.blog != blank and section.settings.blog.articles_count > 0 -%}
                {% for article in section.settings.blog.articles limit: 3 %}
                <div class="col-lg-4 col-md-6 column">
                  <article class="post single-post">
                    <figure class="figure1">
                      <img class="w-100" src="{{ article.image | image_url }}" alt="img">
                    </figure>
                    <div class="content">
                      <span class="post-date">{{ article.created_at | date: " %d %b %Y"  }}</span>
                      <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
                        {% if article.excerpt_or_content != null and article.excerpt_or_content != "" %}
                            <p>{{ article.excerpt_or_content | truncate: 130 }}</p>
                        {% endif %}
                    </div>
                    <footer>
                      <a href="{{ article.url }}" class="read-more-btn">Read More</a>
                    </footer>
                  </article>
                </div>
              {% endfor %}
              {% endif %}
            </div>
          </div>
        </div>
        <!-- /section -->
      {%  endif %}

{% schema %}
{
  "name": "Latest News Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "latest-news-title",
      "default": "Latest News",
      "label" : "Title"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "News"
    }
  ],
  "presets": [
    {
      "name": "Latest News",
      "settings": {
        "blog": "News"
      }
    }
  ]
}
{% endschema %}

