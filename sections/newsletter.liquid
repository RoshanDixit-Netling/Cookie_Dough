<!-- section -->
<div class="section sign-up-section bg-primary-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10 text-center">
        <h4 class="text-white mb-2">
          {{ section.settings.heading_text }}
        </h4>
        <p class="text-white">
          {{ section.settings.subheading }}
        </p>
      </div>
      <div class="col-lg-8 col-xl-7 pt-4">
        <div class="form email-form">
          {%- form 'customer' -%}
            <input type="email" name="contact[email]" class="form-control" placeholder="Email" />
            <input type="submit" class="btn btn-primary" value="Submit" />
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /section -->

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "settings": [
    {
      "type": "textarea",
      "label": "Heading Text",
      "id": "heading_text"
    },
    {
      "type": "textarea",
      "label": "Subheading",
      "id": "subheading"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "My New Section"
    }
  ]
}
{% endschema %}

