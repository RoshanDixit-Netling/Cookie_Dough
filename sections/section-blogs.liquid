{%- paginate blog.articles by {{ section.settings.blogs-per-page }} -%}
  <div class="main-blog page-width section-{{ section.id }}-padding">
    <h1 class="title--primary">{{ blog.title | escape }}</h1>

    <div class="blog-articles {% if section.settings.layout == 'collage' %}blog-articles--collage{% endif %}">
      {%- for article in blog.articles -%}
      {% include 'news-card' %}
      {%- endfor -%}
    </div>

    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
  </div>
{%- endpaginate -%}

{% schema %}
{
  "name": "Main News Blog Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "number",
      "id": "blogs-per-page",
      "label": "Number of Blogs Per Page",
      "default": 6
    }
  ]
}
{% endschema %}