{%- paginate blog.articles by {{ section.settings.blogs-per-page }} -%}
      {% for article in blog.articles %}
      {% include 'news-card' %}
      {% endfor %}

    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
  </div>
{%- endpaginate -%}

{% schema %}
{
  "name": "Main News Blog Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "number",
      "id": "blogs-per-page",
      "label": "Number of Blogs Per Page",
      "default": 6
    }
  ]
}
{% endschema %}