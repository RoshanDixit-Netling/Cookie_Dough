  {
    "name": "Faq Section",
    "settings": [
      {
        "type": "text",
        "id": "faq-title",
        "label": "Title",
        "default": "Frequently asked questions"
      }
    ],
    "blocks": [
      {
        "name": "faq",
        "type": "faq",
        "settings": [
          {
            "type": "richtext",
            "id": "faq-question",
            "label": "Faq Question"
          },
          {
            "type": "richtext",
            "id": "faq-answer",
            "label": "Faq Answer"
          }
        ]
      }
    ]
  }
{% endschema %}

