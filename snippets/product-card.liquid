<div class="col-xl-3 col-lg-4 col-md-6 column single-product">
  <div class="figure1 video">
    {% for media in product.media limit: 1 %}
      {% case media.media_type %}
        {% when 'video' %}
        {{ media | video_tag: controls: false, autoplay: true, loop: true }}
      {% endcase %}
    {% endfor %}
    <span class="hover">
      <form
        action="/cart/add"
        method="post"
        id="product-form- {{ product.id }}">
        <input
          type="hidden"
          name="id"
          value="{{ product.variants.first.id }}">
        <div>
          <button
            type="submit"
            class="btn btn-outline-primary bg-color1 btn-sm"
            name="add">Add to cart</button>
        </div>
      </form>
      {% comment %} <a href="#" class="btn btn-outline-primary bg-color1 btn-sm">Add to cart</a> {% endcomment %}
    </span>
  </div>
  <div class="content">
    <h4>
      <a href="#">{{ product.title }}</a>
    </h4>
    <p class="price">{{ product.price | money }}</p>
  </div>
</div>