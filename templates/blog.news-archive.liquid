    <!-- page head --->
      <div id="page-head" class="page-head2 bg-gradient1 text-center pb-5 pb-lg-7">
        <div class="container">
          <h1 class="display-1">{{ blog.title }}</h1>
        </div>
      </div>
      <!-- /page head --->
       <!-- content -->
      <div id="content">
        <!-- section -->
        {% paginate blog.articles by section.settings.blogs-per-page %}
          <div class="section news-overview wave1 bg-color1">
            <div class="container">
              <div class="row">
                {% for article in blog.articles %}
                {% include 'news-card' %}
                {% endfor %}
              </div>
              {% if paginate.pages > 1 %}
                {% include 'pagination' %}
              {% endif %}
            </div>
          </div>
      {% endpaginate %}
        <!-- /section -->
      </div>
      <!-- /content -->